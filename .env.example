# ==================== Django 基础配置 ====================
# 运行环境：development（开发，默认）、production（生产）、testing（测试）
DJANGO_ENV=development
# 密钥：用于加密签名，请设置一个复杂的随机字符串（必填）
DJANGO_SECRET_KEY=your-secret-key-here
# 调试模式：开发环境设为 True，生产环境务必设为 False
DJANGO_DEBUG=True
# 允许访问的域名：多个域名用逗号分隔
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ==================== 数据库配置 ====================
# 数据库引擎：默认使用 MySQL
DB_ENGINE=django.db.backends.mysql
# 数据库名称
DB_NAME=recruitment_db
# 数据库用户名
DB_USER=root
# 数据库密码（必填）
DB_PASSWORD=your-password-here
# 数据库主机地址
DB_HOST=localhost
# 数据库端口号
DB_PORT=3306

# ==================== AI 大语言模型配置 ====================
# 模型名称：使用的 LLM 模型
LLM_MODEL=deepseek-ai/DeepSeek-V3.2-Exp
# API 密钥：从模型服务商获取（必填）
LLM_API_KEY=your-api-key-here
# API 基础地址：模型服务的接口地址
LLM_BASE_URL=https://api.siliconflow.cn/v1
# 温度参数：0 表示输出更确定，值越高输出越随机（0-2）
LLM_TEMPERATURE=0
# 超时时间：API 请求超时秒数
LLM_TIMEOUT=120

# ==================== Embedding 向量模型配置 ====================
# Embedding 模型名称
EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5
# Embedding API 密钥（如与 LLM 相同可留空，将自动使用 LLM_API_KEY）
EMBEDDING_API_KEY=your-embedding-api-key-here
# Embedding API 基础地址（如与 LLM 相同可留空，将自动使用 LLM_BASE_URL）
EMBEDDING_BASE_URL=https://api.siliconflow.cn/v1

# ==================== 文件存储配置 ====================
# 媒体文件目录：用户上传的文件存放位置
MEDIA_ROOT=media
# 静态文件目录：CSS、JS 等静态资源存放位置
STATIC_ROOT=static

# ==================== CORS 跨域配置 ====================
# 允许的前端来源地址（多个地址用逗号分隔）
CORS_ALLOWED_ORIGINS=http://121.41.114.99,http://121.41.114.99:80,http://localhost:5173
